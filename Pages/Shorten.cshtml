@page
@model URL_Shortener.Pages.ShortenModel
@{
    ViewData["Title"] = "Shorten page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - URL shortener</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="border container">
        <div class="text-center" id="centered">
            <p>Cокращённый адрес:</p>
            <input asp-for="ShortUrl" type="text" readonly="readonly" maxlength="5000" size="55" 
                   onfocus="this.setSelectionRange(0, this.value.length)" autofocus/>
            <div>
                <a asp-page="Index" class="btn btn-success">Создать новую ссылку</a>
            </div>
        </div>
    </div>
</body>
</html>